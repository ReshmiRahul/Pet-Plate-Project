@model PetAdoption.Models.MenuItemDto

@{
    ViewData["Title"] = "Create New MenuItem";
}

<div class="container mt-4">
    <h1>Create New MenuItem</h1>
    <h4>MenuItem</h4>
    <hr />

    <div class="row">
        <div class="col-md-6 col-lg-4 mx-auto">
            <form asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter MenuItem Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Food Truck -->
                <div class="form-group">
                    <label asp-for="FoodTruckId" class="control-label">Food Truck Name</label>
                    <select asp-for="FoodTruckId" class="form-control">
                        <option value="">Select a Food Truck</option>
                        @foreach (var foodTruck in ViewBag.FoodTrucks)
                        {
                            <option value="@foodTruck.Value">@foodTruck.Text</option>
                        }
                    </select>
                    <span asp-validation-for="FoodTruckId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
