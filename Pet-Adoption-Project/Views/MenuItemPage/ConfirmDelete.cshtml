@model PetAdoption.Models.MenuItemDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-4">
    <h1>Confirm Delete</h1>

    <h3>Are you sure you want to delete this menu item?</h3>

    <div>
        <h4>Menu Item Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FoodTruckId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FoodTruckId)
            </dd>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.MenuItemId">
            <input type="hidden" asp-for="MenuItemId" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
