@model PetAdoption.Models.ViewModels.MenuItemDetails

@{
    ViewData["Title"] = "Menu Item Details";
    var layout = Context.Items["Layout"] as string ?? "_LayoutAdmin"; // Default to "_Layout" if not set
    Layout = layout;
}

<div class="container mt-4">

    @if (Model != null)
    {
        <div class="card">
            <div class="card-header">
                Menu Item Information
            </div>
            <div class="card-body">
                <h5 class="card-title">Menu Item ID: @Model.MenuItem.MenuItemId</h5>
                <p class="card-text"><strong>Name:</strong> @Model.MenuItem.Name</p>
                <p class="card-text"><strong>Price:</strong> $@Model.MenuItem.Price.ToString("F2")</p>
                <p class="card-text"><strong>Food Truck:</strong> @Model.MenuItem.FoodTruckId</p>
            </div>
            <div class="card-footer text-muted">
                <a href="@Url.Action("Lists", "MenuItemPage")" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            Menu Item not found!
        </div>
    }
</div>
