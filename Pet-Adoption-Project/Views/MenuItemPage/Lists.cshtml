@model IEnumerable<PetAdoption.Models.MenuItemDto>

@{
    ViewData["Title"] = "Menu Items List";
    var layout = Context.Items["Layout"] as string ?? "_LayoutAdmin"; // Default to "_Layout" if not set
    Layout = layout;
}

<h1>Menu Items List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodTruckId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodTruckId)
                </td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.MenuItemId" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
