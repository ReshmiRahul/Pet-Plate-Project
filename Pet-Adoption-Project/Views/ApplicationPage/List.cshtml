@model IEnumerable<PetAdoption.Models.ApplicationDto>

@{
    ViewData["Title"] = "Application List";
}

<div class="container mt-4">
    <h1>Application List</h1>

    <!-- Table to display applications -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.AccountName)</th>
                <th>@Html.DisplayNameFor(model => model.PetName)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                        <td>@Html.DisplayFor(modelItem => item.PetName)</td>

                        <!-- Actions for each application -->
                        <td>
                            <!-- Edit button for confirming the application -->
                            <a asp-action="Edit" asp-route-id="@item.ApplicationID" class="btn btn-warning btn-sm">Confirm</a>

                            <!-- View details of the application -->
                            <a asp-action="Details" asp-route-id="@item.ApplicationID" class="btn btn-info btn-sm">Details</a>

                            <!-- Delete form to confirm deletion -->
                            <form asp-action="ConfirmDelete" asp-route-id="@item.ApplicationID" method="get" style="display:inline-block;">
                                <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No applications found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
