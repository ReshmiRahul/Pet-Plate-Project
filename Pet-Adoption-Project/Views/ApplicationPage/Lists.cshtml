@model IEnumerable<PetAdoption.Models.ApplicationDto>

@{
    ViewData["Title"] = "Application List";
    var layout = Context.Items["Layout"] as string ?? "_LayoutAdmin"; // Default to "_Layout" if not set
    Layout = layout;
}

<div class="container mt-4">
    <h1>Application List</h1>

    <!-- Button to create a new application -->
    <p>
        <a asp-action="New" class="btn btn-primary">Create New Application</a>
    </p>

    <!-- Table to display applications -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.AccountName)</th>
                <th>@Html.DisplayNameFor(model => model.PetName)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                        <td>@Html.DisplayFor(modelItem => item.PetName)</td>

                        <!-- Action buttons for each application -->
                        <td>
                            <a asp-action="Detail" asp-route-id="@item.ApplicationID" class="btn btn-info btn-sm">Detail</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No applications found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
