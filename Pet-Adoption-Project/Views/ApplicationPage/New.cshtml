@model PetAdoption.Models.ApplicationDto

@{
    ViewData["Title"] = "New Application";
}

<div class="container mt-4">
    <h1>New Application</h1>
    <h4>Application</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Account Selection -->
                <div class="form-group">
                    <label asp-for="AccountId" class="control-label">Account</label>
                    <select asp-for="AccountId" class="form-control" asp-items="@(new SelectList(ViewBag.Accounts, "AccountId", "AccountName"))"></select>
                    <span asp-validation-for="AccountId" class="text-danger"></span>
                </div>

                <!-- Pet Selection -->
                <div class="form-group">
                    <label asp-for="PetId" class="control-label">Pet</label>
                    <select asp-for="PetId" class="form-control" asp-items="@(new SelectList(ViewBag.Pets, "PetId", "PetName"))"></select>
                    <span asp-validation-for="PetId" class="text-danger"></span>
                </div>

                <!-- Application Reason -->
                <div class="form-group">
                    <label asp-for="ApplicationReason" class="control-label">Reason for Application</label>
                    <input asp-for="ApplicationReason" class="form-control" />
                    <span asp-validation-for="ApplicationReason" class="text-danger"></span>
                </div>

                <!-- Application Experience -->
                <div class="form-group">
                    <label asp-for="ApplicationExperience" class="control-label">Experience with Pets</label>
                    <input asp-for="ApplicationExperience" class="form-control" />
                    <span asp-validation-for="ApplicationExperience" class="text-danger"></span>
                </div>

                <!-- Application Comments -->
                <div class="form-group">
                    <label asp-for="ApplicationComments" class="control-label">Additional Comments</label>
                    <input asp-for="ApplicationComments" class="form-control" />
                    <span asp-validation-for="ApplicationComments" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <!-- Link to go back to the list -->
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
