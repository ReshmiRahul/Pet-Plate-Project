@model PetAdoption.Models.ViewModels.AccountDetails

@{
    ViewData["Title"] = "Account Details";
}

<div class="container mt-5">
    @if (Model != null)
    {
        <div class="card shadow-lg">
            <div class="card-header bg-info text-white text-center">
                <h4 class="card-title mb-0">Account Information</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title">Account ID: @Model.Account.AccountId</h5>
                <p class="card-text"><strong>Account Name:</strong> @Model.Account.AccountName</p>
                <p class="card-text"><strong>Email:</strong> @Model.Account.AccountEmail</p>
                <p class="card-text"><strong>Role:</strong> @Model.Account.AccountRole</p>
            </div>
            <div class="card-footer text-muted text-center">
                <a href="@Url.Action("List", "AccountPage")" class="btn btn-secondary btn-sm" style="transition: transform 0.3s; margin-top: 10px;">
                    Back to List
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger text-center mt-4" role="alert">
            Account not found!
        </div>
    }
</div>

@section Scripts {
    <script>
        // Button hover animation
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('mouseover', () => btn.style.transform = 'scale(1.05)');
            btn.addEventListener('mouseout', () => btn.style.transform = 'scale(1)');
        });
    </script>
}
