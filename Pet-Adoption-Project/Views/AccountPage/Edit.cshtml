@model PetAdoption.Models.AccountDto

@{
    ViewData["Title"] = "Edit Account";
    var layout = Context.Items["Layout"] as string ?? "_LayoutAdmin"; // Default to "_Layout" if not set
    Layout = layout;
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-warning text-white text-center">
            <h1 class="card-title mb-0">Edit Account</h1>
        </div>
        <div class="card-body">
            <h4 class="mb-4">Account Information</h4>
            <form asp-action="Update" asp-route-id="@Model.AccountId" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="AccountId" />

                <!-- Account Name -->
                <div class="form-group mb-3">
                    <label asp-for="AccountName" class="form-label">Account Name</label>
                    <input asp-for="AccountName" class="form-control" placeholder="Enter account name" />
                    <span asp-validation-for="AccountName" class="text-danger"></span>
                </div>

                <!-- Account Password -->
                <div class="form-group mb-3">
                    <label asp-for="AccountPassword" class="form-label">Password</label>
                    <input asp-for="AccountPassword" type="password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="AccountPassword" class="text-danger"></span>
                </div>

                <!-- Account Email -->
                <div class="form-group mb-3">
                    <label asp-for="AccountEmail" class="form-label">Email</label>
                    <input asp-for="AccountEmail" type="email" class="form-control" placeholder="Enter email address" />
                    <span asp-validation-for="AccountEmail" class="text-danger"></span>
                </div>

                <!-- Account Role -->
                <div class="form-group mb-3">
                    <label asp-for="AccountRole" class="form-label">Role</label>
                    <input asp-for="AccountRole" class="form-control" placeholder="Enter role" />
                    <span asp-validation-for="AccountRole" class="text-danger"></span>
                </div>

                <!-- Location -->
                <div class="form-group mb-4">
                    <label asp-for="LocationId" class="form-label">Location ID</label>
                    <input asp-for="LocationId" class="form-control" placeholder="Enter location ID" />
                    <span asp-validation-for="LocationId" class="text-danger"></span>
                </div>

                <!-- Save Button -->
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary btn-sm"
                       style="transition: transform 0.3s;">Back to List</a>
                    <button type="submit" class="btn btn-primary btn-sm"
                            style="transition: transform 0.3s;">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Button hover animation
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('mouseover', () => btn.style.transform = 'scale(1.05)');
            btn.addEventListener('mouseout', () => btn.style.transform = 'scale(1)');
        });
    </script>
}
