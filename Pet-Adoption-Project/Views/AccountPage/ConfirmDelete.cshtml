@model PetAdoption.Models.AccountDto

@{
    ViewData["Title"] = "Confirm Delete";
    var layout = Context.Items["Layout"] as string ?? "_LayoutAdmin"; // Default to "_Layout" if not set
    Layout = layout;
}

<h1>Confirm Delete</h1>

<h3>Are you sure you want to delete this account?</h3>
<div>
    <h4>Account Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountRole)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountRole)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountId)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.AccountId">
        <input type="hidden" asp-for="AccountId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
    </form>
</div>
