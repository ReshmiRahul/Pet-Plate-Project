@model PetAdoption.Models.PetDto

@{
    ViewData["Title"] = "Create New Pet";
}

<div class="container mt-4">
    <h1 class="mb-4">Create New Pet</h1>

    <div class="card shadow">
        <div class="card-body">
            <h4 class="card-title mb-3">Pet Details</h4>
            <hr />
            <form asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="PetName" class="form-label"></label>
                    <input asp-for="PetName" class="form-control" />
                    <span asp-validation-for="PetName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PetType" class="form-label"></label>
                    <input asp-for="PetType" class="form-control" />
                    <span asp-validation-for="PetType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PetBreed" class="form-label"></label>
                    <input asp-for="PetBreed" class="form-control" />
                    <span asp-validation-for="PetBreed" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PetAge" class="form-label"></label>
                    <input asp-for="PetAge" class="form-control" type="number" min="0" />
                    <span asp-validation-for="PetAge" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PetDescription" class="form-label"></label>
                    <textarea asp-for="PetDescription" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="PetDescription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PetStatus" class="form-label"></label>
                    <input asp-for="PetStatus" class="form-control" type="number" min="0" />
                    <span asp-validation-for="PetStatus" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
