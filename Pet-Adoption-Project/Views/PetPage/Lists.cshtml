@model IEnumerable<PetAdoption.Models.PetDto>

@{
    ViewData["Title"] = "Pets List";
    var layout = Context.Items["Layout"] as string ?? "_LayoutAdmin";
    Layout = layout;
}

<div class="container mt-4">
    <h1 class="mb-4">Pets List</h1>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Pet Name</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.PetName)</td>
                        <td class="text-end">
                            <a asp-action="Detail" asp-route-id="@item.PetId" class="btn btn-info btn-sm">Details</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center text-muted">
                        No pets available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
