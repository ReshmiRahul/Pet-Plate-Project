@model PetAdoption.Models.ViewModels.FoodTruckDetails

@{
    var layout = Context.Items["Layout"] as string ?? "_LayoutAdmin"; // Default to "_Layout" if not set
    Layout = layout;
}

<div class="container mt-4">
    <h1>Food Truck Details</h1>

    <!-- Food Truck Details Section -->
    <div class="mb-4">
        <h2>@Model.FoodTruck.Name</h2>
        <p><strong>Description:</strong> @Model.FoodTruck.Description</p>
        <p><strong>Contact:</strong> @Model.FoodTruck.Contact</p>
        <p><strong>Location Address:</strong> @Model.FoodTruck.LocationAddress</p>
    </div>

    <!-- Menu Items Section -->
    @if (Model.MenuItems != null && Model.MenuItems.Any())
    {
        <h3>Menu Items</h3>
        <ul class="list-group">
            @foreach (var item in Model.MenuItems)
            {
                <li class="list-group-item">
                    @item.Name (@item.Price.ToString("C"))
                </li>
            }
        </ul>
    }
    else
    {
        <p>No menu items are associated with this food truck.</p>
    }

    <!-- Back to List Button -->
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
