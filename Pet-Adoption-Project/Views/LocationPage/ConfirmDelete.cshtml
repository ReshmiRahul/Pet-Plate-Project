@model PetAdoption.Models.LocationDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-5">

    <h1>Confirm Delete</h1>

    <h3 class="text-danger">Are you sure you want to delete this location?</h3>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4>Location Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.State)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.State)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.LocationId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.LocationId)
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" asp-route-id="@Model.LocationId" method="post" class="d-flex justify-content-between">
                <input type="hidden" asp-for="LocationId" />
                <div>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</div>
