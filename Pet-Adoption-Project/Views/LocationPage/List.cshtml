@model IEnumerable<PetAdoption.Models.LocationDto>

@{
    ViewData["Title"] = "Locations List";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Locations List</h1>

    <div class="mb-3 text-center">
        <a asp-action="New" class="btn btn-primary">Create New Location</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.City)</th>
                <th>@Html.DisplayNameFor(model => model.State)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.State)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.LocationId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.LocationId" class="btn btn-info btn-sm">Details</a>

                        <form asp-action="ConfirmDelete" asp-route-id="@item.LocationId" method="get" style="display:inline-block;">
                            <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
